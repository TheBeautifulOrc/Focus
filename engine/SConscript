#pylint: skip-file

from os.path import join
from glob import glob

Import('env')

coreEnv = env.Clone()
coreEnv.Append(CPPPATH=['#engine/src/core'])

coreSource = glob(pathname='src/core/**/*.cpp', recursive=True)

core = coreEnv.SharedLibrary('./shared/core', coreSource, LIBS=['glfw', 'fmt', 'spdlog'])
